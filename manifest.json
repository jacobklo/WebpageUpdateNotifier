{
	"manifest_version" : 2,

	"name" : "Webpage Updates Notifier"
	,"description" : " - Notify you and Auto refresh when feeds comes!"
	,"version" : "0.1"
 
  ,"background" : {
    "page" : "background.html"
  }
  ,"browser_action": {
    "default_icon": "icon.png"
    // ,"default_popup" : "popup.html"
  }
  ,"permissions": ["alarms", "notifications", "*://*/*" , "tabs","contextMenus", "<all_urls>"]
}